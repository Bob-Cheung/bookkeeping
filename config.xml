<?xml version='1.0' encoding='utf-8'?>
<widget id="org.apache.cordova.hellocordova" version="1.0.2" xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>我爱记账</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <!-- <allow-navigation href="*"/> -->
    <allow-navigation href="http://*/*" />
    <allow-navigation href="http://localhost/*" />
    <!-- <allow-navigation href="https://*/*" /> -->
    <allow-intent href="http://*/*" />
    <!-- <allow-intent href="https://*/*" /> -->
    <allow-intent href="ws://*" />
    <allow-intent href="market:*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="file:*" />
    <preference name="Debug" value="true" />
    <!-- 禁止页面放大缩小和移动 -->
    <preference name="EnableViewportScale" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="TopActivityIndicator" value="whiteLarge" />
    <!-- 只能竖屏 -->
    <preference name="Orientation" value="portrait" />
    <!-- 获取文件权限 -->
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />

    <platform name="android">
        <access origin="*" subdomains="true" />
        <allow-navigation href="*" />
        <allow-intent href="market:*" />
        <preference name="WebViewBounce" value="false" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="0" />
        <preference name="SuppressesLongPressGesture" value="true" />
        <preference name="android-targetSdkVersion" value="36" />
        <preference name="android-minSdkVersion" value="27" />

        <!-- 添加读写权限 -->
        <config-file parent="/manifest" target="AndroidManifest.xml"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
        </config-file>

        <!-- android 11 启动画面设置 -->
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="android-minSdkVersion" value="25" />
        <access origin="*" subdomains="true" />

        <!-- <preference name="AndroidWindowSplashScreenAnimatedIcon"
            value="res/screen/android/splashscreen.png" /> -->
        <icon src="/res/icons/android/ldpi.png" density="ldpi" />
        <icon src="/res/icons/android/mdpi.png" density="mdpi" />
        <icon src="/res/icons/android/hdpi.png" density="hdpi" />
        <icon src="/res/icons/android/xhdpi.png" density="xhdpi" />
        <icon src="/res/icons/android/xxhdpi.png" density="xxhdpi" />
        <icon src="/res/icons/android/xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="scheme" value="app" />
        <preference name="hostname" value="localhost" />
        <preference name="Orientation" value="landscape" />
        <preference name="WebViewBounce" value="false" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false" />
        <preference name="SplashScreenDelay" value="0" />
        <preference name="StatusBarOverlaysWebView" value="true" />
        <preference name="Fullscreen" value="true" />
        <preference name="SuppressesLongPressGesture" value="true" />
        <preference name="Suppresses3DTouchGesture" value="false" />
        <preference name="deployment-target" value="12.0" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="/res/icons/ios/180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="/res/icons/ios/60.png" width="60" height="60" />
        <icon src="/res/icons/ios/120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="/res/icons/ios/76.png" width="76" height="76" />
        <icon src="/res/icons/ios/152.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="/res/icons/ios/40.png" width="40" height="40" />
        <icon src="/res/icons/ios/80.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="/res/icons/ios/57.png" width="57" height="57" />
        <icon src="/res/icons/ios/114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="/res/icons/ios/72.png" width="72" height="72" />
        <icon src="/res/icons/ios/144.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="/res/icons/ios/29.png" width="29" height="29" />
        <icon src="/res/icons/ios/58.png" width="58" height="58" />
        <icon src="/res/icons/ios/87.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="/res/icons/ios/50.png" width="50" height="50" />
        <icon src="/res/icons/ios/100.png" width="100" height="100" />

        <!-- iTunes Marketing Image -->
        <icon src="/res/icons/ios/1024.png" width="1024" height="1024" />
        <icon src="/res/icons/ios/20.png" width="20" height="20" />
        <icon src="/res/icons/ios/167.png" width="167" height="167" />
        <icon src="/res/icons/ios/152.png" width="152" height="152" />

